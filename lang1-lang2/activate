echo \
"The path to the root directory of this project (language pair) is stored into the session environment variable CMTBT_ROOT.
This variable is esssential for some scripts of this project.
" >&2

_CMTBT_ROOT=$CMTBT_ROOT
export CMTBT_ROOT=$(cd $(dirname ${BASH_SOURCE:?not found}); pwd)

echo "CMTBT_ROOT Before: $_CMTBT_ROOT
CMTBT_ROOT Set Now: $CMTBT_ROOT"
